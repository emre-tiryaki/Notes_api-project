
PORT= # The port your Express server will listen on (used in src/server.ts)
CLIENT= # The frontend/client URL allowed for CORS requests (used in src/server.ts)
MONGODB_URI= # MongoDB Atlas connection string (used in src/server.ts and src/database/database.ts)
JWT_SECRET= # Secret key for signing JWT tokens (used in src/utils/generateToken.ts and src/middleware/token-verification.ts)
NODE_ENV= # Environment type, e.g. 'development' or 'production' (used for cookie and security settings)